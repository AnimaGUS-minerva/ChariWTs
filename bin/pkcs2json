#!/bin/sh

in=$1
out=$2
certfile=$3
#der=$(echo $in | sed -e's/.pkcs$/.der/')

certfilearg=
if [ -n "$certfile" ];
then
    certfilearg="-CAfile $certfile"
fi
#extra='-nosigs -noverify'
extra='-noverify'

(openssl cms -verify $certfilearg -inform der -in $in $extra 2>/dev/null \
        | sed -e's/,/,\n/g'; echo) >$out

